<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/exo_prev"

            style="@style/ExoMediaButton.Previous"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:background="@drawable/ripple_default_circle"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:layout_marginEnd="@dimen/dim_8"
            android:background="@drawable/ripple_default_circle"
            android:src="@drawable/ic_exo_player_rewind_10"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_shuffle"
            style="@style/ExoMediaButton"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_repeat_toggle"
            style="@style/ExoMediaButton"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.Play"
            android:layout_width="@dimen/dim_72"
            android:layout_height="@dimen/dim_72"
            android:background="@drawable/bg_circle_main"
            android:backgroundTint="@color/colorMain"
            android:paddingVertical="@dimen/dim_24"
            android:paddingStart="@dimen/dim_6"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_exo_player_play_button"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.Pause"
            android:layout_width="@dimen/dim_72"
            android:layout_height="@dimen/dim_72"
            android:background="@drawable/bg_circle_main"
            android:backgroundTint="@color/colorMain"
            android:padding="@dimen/dim_24"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_exo_player_pause_button"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:layout_marginStart="@dimen/dim_8"
            android:background="@drawable/ripple_default_circle"
            android:src="@drawable/ic_exo_player_forward_10"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_next"
            style="@style/ExoMediaButton.Next"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:background="@drawable/ripple_default_circle"
            app:tint="@color/colorOtherControls" />

        <ImageButton
            android:id="@id/exo_vr"
            style="@style/ExoMediaButton.VR"
            app:tint="@color/colorOtherControls" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dim_48"
            android:paddingHorizontal="4dp"
            android:textColor="@color/colorMain"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@id/exo_progress_placeholder"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dim_48"
            android:paddingHorizontal="4dp"
            android:textColor="@color/colorMain"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
